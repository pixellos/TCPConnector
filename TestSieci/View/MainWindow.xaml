<Window x:Class="Server.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSieci"
        xmlns:vm="clr-namespace:TestSieci.ViewModel"
        mc:Ignorable="d"
        Title="Server MVVM 0.1" Height="80" Width="316">
    <Window.DataContext>
        <vm:ServerViewModel/>
    </Window.DataContext>
    
    <Grid>
        <CheckBox x:Name="checkBox" Command="{Binding TryToStartServer}"  Content="{Binding Path=IsConnectedProperty, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="196,15,6,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=TextToSend, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>
